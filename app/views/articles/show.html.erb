<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>
<p>
  <strong>Published on:</strong>
  <%= @article.created_at %>
</p>
<% if session[:username] == @article.author %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-xs' %>
<% end %>
<%= link_to 'Back', articles_path, class: 'btn btn-primary btn-xs' %>
<% if current_user.nil? %>
  <p class='text-warning'>You must be logged in to view or make comments. </p>
<% else %>
  <%= link_to 'Comment', '/articles/' +session[:id].to_s + '/comments', class: 'btn btn-primary btn-xs' %>
<!--%= render partial: 'nestedcomments/comment' %-->
<% end %>
